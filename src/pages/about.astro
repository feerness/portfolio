<style>
	.about {
		display: flex;
		flex-direction: column;
		gap: 4rem;
		padding: 2rem 0;
	}

	/* Animated Sections */
	.animated-section {
		opacity: 0;
		transform: translateY(30px);
		animation: fadeInUp 0.8s ease-out forwards;
	}

	.animated-section:nth-child(2) { animation-delay: 0.1s; }
	.animated-section:nth-child(3) { animation-delay: 0.2s; }
	.animated-section:nth-child(4) { animation-delay: 0.3s; }
	.animated-section:nth-child(5) { animation-delay: 0.4s; }
	.animated-section:nth-child(6) { animation-delay: 0.5s; }

	@keyframes fadeInUp {
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	/* Section Headers */
	.section-header {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 2rem;
	}

	.section-title {
		font-size: var(--text-2xl);
		color: var(--gray-0);
		margin: 0;
		background: linear-gradient(135deg, var(--accent-regular), var(--accent-dark));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	/* Content Cards */
	.content-card {
		background: linear-gradient(135deg, var(--gray-999_40), var(--gray-800_40));
		border: 1px solid var(--gray-800);
		border-radius: 1.5rem;
		padding: 2.5rem;
		box-shadow: var(--shadow-lg);
		backdrop-filter: blur(10px);
		transition: all 0.3s ease;
	}

	.content-card:hover {
		transform: translateY(-5px);
		box-shadow: var(--shadow-xl);
		border-color: var(--accent-regular);
	}

	.highlight-text {
		background: linear-gradient(135deg, var(--accent-subtle), var(--accent-overlay));
		border-radius: 1rem;
		padding: 1.5rem;
		margin-bottom: 1.5rem;
		border-left: 4px solid var(--accent-regular);
	}

	/* Education Grid */
	.education-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 1.5rem;
	}

	.education-card {
		background: linear-gradient(135deg, var(--gray-999_40), var(--gray-800_40));
		border: 1px solid var(--gray-800);
		border-radius: 1.5rem;
		padding: 2rem;
		text-align: center;
		transition: all 0.3s ease;
		position: relative;
		overflow: hidden;
	}

	.education-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 4px;
		background: linear-gradient(90deg, var(--accent-regular), var(--accent-dark));
	}

	.education-card.ongoing::before {
		background: linear-gradient(90deg, var(--accent-dark), var(--accent-regular));
		animation: shimmer 2s ease-in-out infinite;
	}

	@keyframes shimmer {
		0%, 100% { opacity: 1; }
		50% { opacity: 0.5; }
	}

	.education-card:hover {
		transform: translateY(-8px);
		box-shadow: var(--shadow-xl);
		border-color: var(--accent-regular);
	}

	.education-year {
		display: inline-block;
		background: var(--accent-regular);
		color: var(--gray-999);
		padding: 0.5rem 1rem;
		border-radius: 2rem;
		font-weight: 600;
		font-size: var(--text-sm);
		margin-bottom: 1rem;
	}

	.education-card h3 {
		color: var(--gray-0);
		margin: 0.5rem 0;
		font-size: var(--text-lg);
	}

	/* Skills Grid */
	.skills-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.skill-category {
		background: linear-gradient(135deg, var(--gray-999_40), var(--gray-800_40));
		border: 1px solid var(--gray-800);
		border-radius: 1.5rem;
		padding: 2rem;
		transition: all 0.3s ease;
	}

	.skill-category:hover {
		transform: translateY(-5px);
		box-shadow: var(--shadow-xl);
		border-color: var(--accent-regular);
	}

	.skill-icon {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.skill-category h3 {
		color: var(--gray-0);
		margin-bottom: 1rem;
		font-size: var(--text-lg);
	}

	.skill-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.skill-tag {
		background: linear-gradient(135deg, var(--accent-subtle), var(--accent-overlay));
		color: var(--gray-0);
		padding: 0.5rem 1rem;
		border-radius: 2rem;
		font-size: var(--text-sm);
		border: 1px solid var(--accent-regular);
		transition: all 0.3s ease;
	}

	.skill-tag:hover {
		background: var(--accent-regular);
		color: var(--gray-999);
		transform: scale(1.05);
	}

	/* Soft Skills Grid */
	.soft-skills-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 1.5rem;
	}

	.soft-skill-card {
		background: linear-gradient(135deg, var(--gray-999_40), var(--gray-800_40));
		border: 1px solid var(--gray-800);
		border-radius: 1.5rem;
		padding: 2rem;
		text-align: center;
		transition: all 0.3s ease;
	}

	.soft-skill-card:hover {
		transform: translateY(-5px);
		box-shadow: var(--shadow-xl);
		border-color: var(--accent-regular);
	}

	.soft-skill-icon {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.soft-skill-card h3 {
		color: var(--gray-0);
		margin-bottom: 1rem;
		font-size: var(--text-lg);
	}

	/* Community Card */
	.community-card {
		background: linear-gradient(135deg, var(--gray-999_40), var(--gray-800_40));
		border: 1px solid var(--gray-800);
		border-radius: 1.5rem;
		padding: 2.5rem;
		box-shadow: var(--shadow-lg);
		transition: all 0.3s ease;
	}

	.community-card:hover {
		transform: translateY(-5px);
		box-shadow: var(--shadow-xl);
		border-color: var(--accent-regular);
	}

	.community-highlight {
		text-align: center;
		margin-bottom: 2rem;
		padding: 2rem;
		background: linear-gradient(135deg, var(--accent-subtle), var(--accent-overlay));
		border-radius: 1rem;
		border: 1px solid var(--accent-regular);
	}

	.community-icon {
		font-size: 3rem;
		margin-bottom: 1rem;
	}

	.community-highlight h3 {
		color: var(--gray-0);
		margin-bottom: 0.5rem;
		font-size: var(--text-xl);
	}

	.community-subtitle {
		color: var(--accent-regular);
		font-weight: 600;
		margin-bottom: 0;
	}

	/* Responsive */
	@media (max-width: 50em) {
		.about {
			gap: 3rem;
			padding: 1rem 0;
		}

		.content-card,
		.community-card {
			padding: 2rem;
		}

		.education-grid,
		.skills-grid,
		.soft-skills-grid {
			grid-template-columns: 1fr;
		}

		.section-title {
			font-size: var(--text-xl);
		}
	}
</style>
