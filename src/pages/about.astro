		.about {
			gap: 3rem;
			padding: 1.5rem 1rem;
		}

		.animated-section {
			padding: 0 0.75rem;
		}

		.section-header {
			margin-bottom: 2rem;
			padding: 0 0.75rem;
		}

		.section-title {
			font-size: var(--text-xl);
		}

